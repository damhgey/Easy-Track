@model Easy_Track_MVC.Models.Bus

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="main  align-self-md-center ">
        <div class="col-lg-12 grid-margin stretched-card">
            <div class="row flex-grow">
                <div class="col-12 grid-margin">

                    <div class="card">
                        <form class="form-sample">
                            <!--card header-->
                            <div class="card-header bg-card-header ">
                                <h4 class="">
                                    Add Bus
                                    <a class="btn btn-light fa-pull-right" href="/Bus/index">
                                        <i class="fa fa-eye"></i> View Buses Details

                                    </a>
                                </h4>
                            </div>


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <!--card body-->
                            <div class="card-body">

                                <!--<h4>Personal Details</h4><hr>-->
                                <div class="row">

                                    <div class="form-group col-md-6 mt-2">
                                        @Html.LabelFor(model => model.RouteStart, htmlAttributes: new { @class = "control-label col-md-6" })
                                        @Html.EditorFor(model => model.RouteStart, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.RouteStart, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group col-md-6 mt-2">
                                        @Html.LabelFor(model => model.RouteEnd, htmlAttributes: new { @class = "control-label col-md-6" })
                                        @Html.EditorFor(model => model.RouteEnd, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.RouteEnd, "", new { @class = "text-danger" })


                                    </div>

                                </div>


                                <div class="row">
                                    <div class="form-group col-md-6 mt-4 mb-2">
                                        @Html.LabelFor(model => model.BusNum, htmlAttributes: new { @class = "control-label col-md-6" })
                                        @Html.EditorFor(model => model.BusNum, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.BusNum, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group col-md-6 mt-4 mb-2">
                                        @Html.LabelFor(model => model.RouteMapLink, "Route On Map Link",htmlAttributes: new { @class = "control-label col-md-6" })
                                        @Html.EditorFor(model => model.RouteMapLink, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.RouteMapLink, "", new { @class = "text-danger" })
                                    </div>



                                </div>



                                <!--footer-->
                                <div class="card-footer  d-flex justify-content-center mt-5 ">
                                    <input type="submit" value="Add Bus" class="btn btn-danger" />
                                </div>
                            </div>

                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

}


<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>