@model Easy_Track_MVC.Models.Bus

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}



<div class="d-flex justify-content-center text-primary">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="form mt-3 mb-3" style="border:solid;border-color:#343a40;width:640px">
        <center>
            <h6 class="text-danger">Edit This Bus</h6>
        </center>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group mt-4 ">
            @Html.LabelFor(model => model.RouteStart, "Route Start", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.RouteStart, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RouteStart, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RouteEnd, "Route End", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.RouteEnd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RouteEnd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BusNum, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.BusNum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BusNum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RouteMapLink, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.RouteMapLink, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RouteMapLink, "", new { @class = "text-danger" })
            </div>
        </div>


        <center>
            <div class="form-group mt-4 mb-4">
                <div class="col-md-offset-2 col-md-10 ">
                    <input type="submit" value="Save" class="btn btn-danger" />
                </div>
            </div>
        </center>
    </div>
    }

</div>

<div class="mb-3 text-center">
    @Html.ActionLink("Back to List", "Index")
</div>

